{
    "name": "mode-manager-extension",
    "displayName": "Mode Manager Extension",
    "description": "Управляет и позволяет переключаться между различными режимами Roo.",
    "version": "0.3.5",
    "publisher": "publisherName",
    "icon": "images/Icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/example/mode-manager-extension.git"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "mode-manager-extension.openPanel",
                "title": "Mode Manager: Open Panel"
            }
        ],
        "configuration": {},
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "modeManagerContainer",
                    "title": "Mode Manager",
                    "icon": "images/Icon.png"
                }
            ]
        },
        "views": {
            "modeManagerContainer": [
                {
                    "id": "modeManagerActivityBarView",
                    "name": "Open Mode Manager Panel",
                    "type": "webview",
                    "icon": "images/Icon.png"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build:ui && npm run compile:extension",
        "compile:extension": "tsc -p ./",
        "watch:extension": "tsc -watch -p ./",
        "build:ui": "vite build --emptyOutDir",
        "dev:ui": "vite",
        "compile": "npm run build:ui && npm run compile:extension",
        "watch": "npm run watch:extension",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/node": "18.x",
        "@types/vscode": "^1.80.0",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.3.9",
        "eslint": "^8.57.0",
        "glob": "^8.1.0",
        "typescript": "^5.3.3",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "vite": "^5.2.12",
        "@vitejs/plugin-react": "^4.3.0"
    },
    "dependencies": {
        "@types/adm-zip": "^0.5.7",
        "@types/fs-extra": "^11.0.4",
        "adm-zip": "^0.5.16",
        "fs-extra": "^11.3.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "@dnd-kit/core": "^6.1.0",
        "@dnd-kit/sortable": "^8.0.0"
    }
}